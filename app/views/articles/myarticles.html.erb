<!-- Page Header-->
<header class="masthead" style="background-image: url('https://i.pinimg.com/originals/06/26/8b/06268b10ac8a5e6fb2d587c783f8e096.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Blog Posts</h1>
                    <span class="subheading"></span>
                </div>
            </div>
        </div>
    </div>
</header>
 <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                <% if notice %>
                <div class="alert alert-warning" role="alert"><%= notice %></div>
                <% end %>
                <% @data_list.each do |article|%>
                    <!-- Post preview-->
                    <div class="post-preview">
                        <a href="<%= article_path(article) %>">
                            <h2 class="post-title"><%= article.title %></h2>
                            <h3 class="post-subtitle"><%= article.subtitle %></h3>
                        </a>
                        <p class="post-meta">
                            Posted By
                            <a href="sd"><%= article.user.email %></a>
                            on <%= article.created_at %>
                        </p>
                    </div>
                    <!-- Divider-->
                    <hr class="my-4" />
                <% end %>
                <div class="apple_pagination">
                    <%= will_paginate @data_list %>
                </div>
                </div>
            </div>
        </div>